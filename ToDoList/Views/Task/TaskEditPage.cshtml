@using ToDoList.Domain.Enum
@model ToDoList.Domain.ViewModel.TaskViewModel

@{
    ViewData["Title"] = "Редагувати";
}

<form method="post" asp-action="TaskEditPage" enctype="multipart/form-data">
    <input type="hidden" value="Id" id="Id" />
    <div class="form-group">
        <label asp-for="Name">Title</label>
        <input asp-for="Name" class="form-control" placeholder="Назва">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Опис</label>
        <input asp-for="Description" class="form-control" placeholder="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Priority">Пріоритет</label>
        <select asp-for="Priority" asp-items="@Html.GetEnumSelectList<Priority>()" class="form-control">
        </select>
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsDone">Стадія виконання</label>
        <div>
            <input asp-for="IsDone" type="radio" value="true" /> Виконано
            <input asp-for="IsDone" type="radio" value="false" checked /> Не виконано
        </div>
        <span asp-validation-for="IsDone" class="text-danger"></span>
    </div>
    @*<div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>*@
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>