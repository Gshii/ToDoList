@using ToDoList.Domain.Enum
@model ToDoList.Domain.ViewModel.TaskViewModel

@{
    ViewData["Title"] = "Деталі";
}

<h1>Деталі завдання</h1>
<p><strong>Назва:</strong> @Model.Name</p>
<p><strong>Пріоритет:</strong> @Model.Priority</p>
<p><strong>Опис:</strong> @Model.Description</p>
<p><strong>Стадія виконання:</strong> @(Model.IsDone)</p>

<button type="button" class="btn btn-sm btn-outline-secondary" onclick="location.href='@Url.Action("TaskEditPage", new { id = Model.Id })'">Редагувати</button>